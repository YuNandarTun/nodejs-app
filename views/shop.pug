extends layouts/main-layouts.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content 
    main 
        if prods.length > 0
            .grid 
                each product in prods 
                    article.card.product-item 
                            header.card__header 
                                h1.product__title  #{ product.title }
                            .card__image 
                                img(src="https://play-lh.googleusercontent.com/YdYime5QlFe1aoMkw1RR6P7OXYVdDsOXQtqVaKuUcbURzzd-ynpUrD3ZMtPZWZAC6P8", alt="A Gem")
                            .card__content 
                                h2.product__price $ 9000
                                p.product__description gems are good 
                            .card__actions
                                button.btn Add to Cart 
        else 
            h1 No Product Found